<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/text_view_authorization"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="90dp"
        android:textColor="@color/dark_blue_text"
        android:fontFamily="@font/caviar_dreams_family"
        android:textFontWeight="@integer/material_motion_duration_medium_1"
        android:textSize="40sp"
        android:text="Авторизация" />

    <EditText
        android:id="@+id/edittext_login"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="30dp"
        android:textSize="24sp"
        android:hint="@string/login"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/text_view_authorization" />

    <EditText
        android:id="@+id/edittext_password"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginHorizontal="30dp"
        android:layout_marginTop="20dp"
        android:textSize="24sp"
        android:hint="@string/password"
        app:layout_constraintTop_toBottomOf="@id/edittext_login"
        app:layout_constraintLeft_toLeftOf="parent" />

    <!--<CheckBox
        android:id="@+id/checkbox_remember"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue_text"
        android:textSize="22sp"
        android:fontFamily="@font/caviar_dreams_family"
        android:textFontWeight="@integer/material_motion_duration_medium_1"
        android:text="@string/remember"
        app:layout_constraintStart_toStartOf="@id/edittext_password"
        app:layout_constraintTop_toBottomOf="@id/edittext_password"
        app:layout_constraintBottom_toTopOf="@id/button_sign_in"/>-->

    <!--<TextView
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginTop="12dp"
        android:textSize="22sp"
        android:textColor="@color/pale_gray_text"
        android:fontFamily="@font/caviar_dreams_family"
        android:textFontWeight="@integer/material_motion_duration_medium_1"
        android:text="@string/forget_password"
        app:layout_constraintRight_toRightOf="@id/edittext_password"
        app:layout_constraintTop_toTopOf="@id/checkbox_remember"/>-->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_sign_in"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:backgroundTint="@color/pale_blue_background"
        android:textColor="@color/dark_blue_text"
        android:textSize="30sp"
        android:fontFamily="@font/caviar_dreams_family"
        app:layout_constraintHorizontal_weight="@integer/material_motion_duration_medium_1"
        android:text="@string/sign_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@id/edittext_login"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/pale_gray_text"
        android:fontFamily="@font/caviar_dreams_family"
        android:textFontWeight="@integer/material_motion_duration_medium_1"
        android:text="@string/no_acc"
        app:layout_constraintTop_toTopOf="@id/button_sign_in"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@id/button_sign_in"/>

    <TextView
        android:id="@+id/text_view_create_acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/dark_blue_text"
        android:textSize="22sp"
        android:fontFamily="@font/caviar_dreams_family"
        android:textFontWeight="@integer/material_motion_duration_medium_1"
        android:text="@string/create_acc"
        app:layout_constraintRight_toRightOf="@id/button_sign_in"
        app:layout_constraintTop_toTopOf="@id/button_sign_in"
        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>